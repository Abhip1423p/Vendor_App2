<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".garbageC">



    <ImageView
        android:layout_marginLeft="50dp"

android:layout_marginRight="50dp"
        android:id="@+id/imageG"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="70dp"

       android:background="@drawable/back"
        android:scaleType="centerCrop"

        app:layout_constraintTop_toTopOf="parent"

        />

    <TextView
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:id="@+id/garbageT"
        android:layout_width="match_parent"
        android:layout_height="139dp"

        android:layout_gravity="center"
        android:text="@string/haveUPickGar"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"

        android:textSize="30dp"

        />

    <Button
        android:id="@+id/yesBtnG"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"



        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"

android:onClick="message"

        android:background="@drawable/no_btn"

        android:text="हा"
        android:textStyle="bold"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent" />


    <Button

        android:id="@+id/noBtnG"

        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"

        android:layout_marginRight="50dp"
        android:background="@drawable/yes_btn"
        android:onClick="messageGN"
        android:text="नहीं"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageG"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button"
        app:layout_constraintVertical_bias="0.223" />

    <TextView
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="60dp"
        android:text="@string/infoSve"
        android:textAlignment="center"

        android:textSize="20dp"
        />



</LinearLayout>